extends layout.pug

block content
  h2 Our Products

  if !products || products.length === 0
    p No products available right now.
  else
    .product-grid
      each product in products
        .product-card
          h3= product.name
          p $#{product.price.toFixed(2)}
          p= product.quantity + ' in stock'
          if product.inStock
            span.in-stock In Stock
          else
            span.out-of-stock Out of Stock
